<Window x:Class="PingPong.AddPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPong"
        mc:Ignorable="d"
        Title="AddPlayer" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="60,19,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Nom:" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top" Width="45"/>
        <Image x:Name="image" Margin="90,99,90,33"/>
        <Label x:Name="label_Copy" Content="Imatge:" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Width="60"/>
        <Label x:Name="pathLabel" Content="" Margin="70,48,90,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Selecciona" Margin="0,48,10,0" VerticalAlignment="Top" Click="button_Click" HorizontalAlignment="Right" Width="75"/>
        <Label x:Name="label1" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="button1" Content="Afegir" Margin="0,0,10,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="button1_Click"/>

    </Grid>
</Window>